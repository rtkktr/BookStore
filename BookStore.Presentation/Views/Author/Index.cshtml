@using BookStore.Application.Dtos.AuthorDtos;
@model List<GetAllAuthorDto>

<div class="container mt-4">
    <h2>Author List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4">
                            <div class="text-danger" asp-validation-summary="All"></div>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Author" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-controller="Author" asp-route-id="@item.Id" class="btn btn-danger btn-sm ml-2">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>