@using BookStore.Application.Dtos.Users;
@model List<GetAllUserDto>

<div class="container mt-4">
    <h2>User List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>UserName</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="4">
                            <div class="text-danger" asp-validation-summary="All"></div>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Email</td>
                        <td>@item.UserName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="User" asp-route-userId="@item.Id" class="btn btn-info btn-sm">Edit User</a>
                            <a  asp-controller="User" asp-action="Delete" asp-route-userId=@item.Id class="btn btn-danger btn-sm ml-2">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>